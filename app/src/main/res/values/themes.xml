<resources>
    <!-- Splash Screen theme. -->
    <style name="splashScreenTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/eulerity_logo</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.Eulerity" parent="Theme.Material3.DayNight.NoActionBar">
            <!-- Primary brand color-->
            <item name="colorPrimary">#2F8D46</item>
            <item name="colorPrimaryVariant">#1fdd95</item>
            <item name="colorOnPrimary">@color/white</item>
            <!-- Secondary brand color. -->
            <item name="colorSecondary">#2F8D46</item>
            <item name="colorOnSecondary">@color/black</item>
            <!-- Status bar color. -->
            <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
            <!-- Customize your theme here. -->
        </style>
</resources>